<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.codeforamerica.open311"
    android:versionCode="1"
    android:versionName="0.0.1-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="org.codeforamerica.open311.CitySelectionActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.codeforamerica.open311.ServiceListActivity" />
        <activity
            android:name="org.codeforamerica.open311.ServiceDefinitionActivity"
            android:label="@string/title_activity_service_definition" >
        </activity>
        <activity
            android:name="org.codeforamerica.open311.ServiceRequestListActivity"
            android:label="@string/title_activity_service_request_list" >
        </activity>
    </application>

</manifest>